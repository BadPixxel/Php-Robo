{
    "name":                 "badpixxel/php-cli",
    "description":          "Dev & Ci/CD Toolkit",
    "type":                 "application",
    "prefer-stable":        true,
    "license":              "MIT",
    "minimum-stability":    "dev",

    "authors": [
        {
            "name": "BadPixxel",
            "email": "eshop.bpaquier@gmail.com"
        }
    ],

    "bin": ["bin/wall-e.phar"],

    "autoload":{
        "psr-4":{
            "BadPixxel\\PhpRobo\\": "./src"
        }
    },

    "require": {
        "php":                  "^7.4|^8.0",
        "consolidation/robo":   "^4.0",
        "symfony/dotenv":       "^4.4|^5.4|^6.1"
    },
    "require-dev": {
        "badpixxel/php-sdk":    "^2.0"
    },

    "config": {
        "preferred-install":                        "dist",
        "platform": {
            "php": "7.4.0"
        },
        "allow-plugins": {
            "phpro/grumphp": true
        }
    }
}