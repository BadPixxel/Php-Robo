{
    "name":                 "badpixxel/php-cli",
    "description":          "Dev & Ci/CD Toolkit",
    "type":                 "application",
    "prefer-stable":        true,
    "license":              "MIT",
    "minimum-stability":    "dev",

    "authors": [
        {
            "name": "BadPixxel",
            "email": "eshop.bpaquier@gmail.com"
        }
    ],

    "bin": ["bin/wall-e.phar"],

    "autoload":{
        "psr-4":{
            "BadPixxel\\WallE\\": "./src"
        }
    },

    "require": {
        "php":                          "^7.4|^8.0",
        "consolidation/robo":           "^4.0",
        "symfony/dotenv":               "^4.4|^5.4|^6.4",
        "badpixxel/robo-php":           "1.0.x-dev",
        "badpixxel/robo-jekyll":        "1.0.x-dev",
        "badpixxel/robo-nodejs":        "1.0.x-dev",
        "badpixxel/robo-splashsync":    "1.0.x-dev",
        "badpixxel/robo-extras":        "1.0.x-dev"
    },
    "require-dev": {
        "badpixxel/php-sdk":            "^2.0"
    },

    "config": {
        "preferred-install":            "dist",
        "platform": {
            "php":      "7.4.0"
        },
        "allow-plugins": {
            "phpro/grumphp": true
        }
    }
}